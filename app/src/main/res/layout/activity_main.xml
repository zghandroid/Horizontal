<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.zhang.horizontalgridview.ui.MainActivity">

    <include layout="@layout/test_actionbar"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/my_draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/draw_main"
            layout="@layout/draw_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <include
            android:id="@+id/draw_start"
            layout="@layout/draw_start"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
